{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "PackageTracker API",
    "description": "An API to track the ongoing status of a package in transit"
  },
  "paths": {
    "/status/{id}": {
      "get": {
        "description": "Gets the status of a package",
        "operationId": "get package status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of package",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "pet response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Body"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Body": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "In transit"
          },
          "message": {
            "type": "string",
            "example": "On route to destination"
          }
        }
      }
    }
  }
}
