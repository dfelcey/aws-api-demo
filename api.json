{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "PackageTracker API",
    "description": "An API to track the ongoing status of a package in transit",
    "contact": {
      "name": "Dave Felcey",
      "email": "dave.felcey@mulesoft.com",
      "url": "https://mulesoft.com"
    }
  },
  "security" :
  [
    { 
      "BasicAuth": []
    }
  ],
  "tags": [
    {
      "name": "Package Tracking",
      "description": "Get current package status"
    }
  ],
  "paths": {
    "/status/{id}": {
      "get": {
        "description": "Gets the status of a package",
        "operationId": "get-package-status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of package",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "pet response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Body"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
       "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "Body": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "In transit"
          },
          "message": {
            "type": "string",
            "example": "On route to destination"
          }
        },
        "example": {
          "status": "In transit",
          "message": "On route to destination"
        }
      }
    }
  }
}